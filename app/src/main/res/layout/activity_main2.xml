<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.manoj.learnwithfun.activities.Main2Activity"
    android:weightSum="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#191930"
            android:elevation="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:background="?attr/actionModeCloseDrawable"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/level_image" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="19dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:onClick="watchVideo"
                android:layout_toStartOf="@+id/coins"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/coins"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="watchVideo"
                android:textColor="#bbb"
                android:textSize="15dp" />


        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/playButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160sp"
        android:text="PLAY"
        android:textColor="#000000"
        android:background="@drawable/play"
        android:textSize="35dp"
        />

    <Button
        android:id="@+id/daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="daily challenge"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/play"
        android:textSize="30dp"
        />

</RelativeLayout>
